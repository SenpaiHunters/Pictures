{
  "manifest_version": 3,
  "name": "Spotify Customizer",
  "version": "1.3.0",
  "description": "Extension to customize Spotify web client.",
  "author": "SenpaiHunters",
  "homepage_url": "https://github.com/senpaihunters/",
  "icons": {
    "16": "assets/logo16.png",
    "48": "assets/logo48.png",
    "128": "assets/logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "notifications",
    "host_permissions",
    "declarativeNetRequest",
    "contextMenus",
    "declarativeContent",
    "storage",
    "activeTab",
    "https://open.spotify.com/*"
  ],
  "host_permissions": ["https://open.spotify.com/*"],
  "action": {
    "default_popup": "options.html"
  },
  "commands": {
    "toggle_sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "Toggle Spotify sidebar"
    },
    "search_spotify": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Search Spotify for current tab title"
    },
    "open_spotify": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open Spotify in a new tab"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["options.js"]
    }
  ]
}
